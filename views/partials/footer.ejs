<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script>
  $(document).ready(function(){
    $('.nav-link').click(function(){
      $('.nav-link').removeClass('active'); // Remove active class from all links
      $(this).addClass('active'); // Add active class to the clicked link
    });

    var displayerDiv = $('.displayer');

// Initially hide the displayer div
displayerDiv.hide();

// Monitor changes in href attribute
$('.displayer a').on('DOMAttrModified', function(){
    var href = $(this).attr('href').trim();
    if(href.length > 0 && href !== "#") {
        displayerDiv.show(); // Display the parent div if href has a link
    } else {
        displayerDiv.hide(); // Hide the parent div if href is empty or "#"
    }
});

// Trigger the DOMAttrModified event to check initial href attribute
$('.displayer a').trigger('DOMAttrModified');
  })
</script>
